public class Shirt {

    private  String colour;
    private  char size;
    Shirt(){ //this constructor will create an object if you don't pass parameters
        System.out.printf("SPECIFY LATER");
    }
    Shirt(String colour, char size){ // this constructor will create an object with these parameters
        this.colour = colour;
        this.size = size;
    }
    public static void putOn(){
        System.out.printf("Shirt is on");
    }

    public String getColour() {
        return colour;
    }

    public  void setColour(String newColour) {
        colour = newColour;
    }

    public char getSize() {
        return size;
    }

    public  void setSize(char newSize) {
        size = newSize;
    }

    public static void takeOff(){
        System.out.printf("Shirt is off");
    }
}
