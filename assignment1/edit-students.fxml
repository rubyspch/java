<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<!--create a DialogPane and include the appropriate controller-->
<DialogPane fx:controller="fsd.assignment.assignment1.EditStudentController"
        xmlns:fx="http://javafx.com/fxml">
    <content>
        <GridPane vgap="20" hgap="20">
            <Label fx:id="yearStudyDisplay" text="Year of Study" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="mod1Edit" text="Module Option 1" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label fx:id="mod2Edit" text="Module Option 2" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            <Label fx:id="mod3Edit" text="Module Option 3" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
            <!--make use of the EditStudentController to complete the rest of the fxml-->
            <ChoiceBox fx:id="mod1ChoiceEdit" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <ChoiceBox fx:id="mod2ChoiceEdit" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            <ChoiceBox fx:id="mod3ChoiceEdit" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

        </GridPane>
    </content>
</DialogPane>

